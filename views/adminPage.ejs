<!DOCTYPE html>
<html>
    <head>
        <title><%= heading %></title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="../assets/css/admin_page.css">
    </head>
    <body>
        <div>
            <div class="nav-bar">
                <img src="../assets/images/logo.JPG" class="col-1"></img>
                <a href="/admin/signOut" class="col-1"><button >Sign Out</button></a>
                <a href="/admin/addProduct" class="col-1"><button style="margin-right:10px;">Add Product</button></a>                    
            </div>
            <div class="innerDiv">
                <!-- Every existing products fetched from DB and shown here -->
                <%if(products){%>
                    <% for(let product of products){%>
                    <div class="product_details">
                        <a href="/admin/deleteProduct/<%=product.id%>" class="deleteProduct">X</a>
                        <ul>
                            <li class="product_name">
                                <h5 style="display: inline;"><%=product.productName %></h5>
                                <a href="/admin/creatingCookies?name=productName&id=<%=product.id%>"><button type="submit"><i class="fa-solid fa-pen"></i></a>
                                </button>
                            </li>
                            <li><center><img src="../assets/images/products/<%=product.imageName%>" alt="image"><a href="/admin/creatingCookies?name=imageName&id=<%=product.id%>"><button type="submit"><i class="fa-solid fa-pen"></i></a></center></li>
                            <br>
                            <li>
                                <b>Price : </b> Rs.<%=product.price %>
                                <a href="/admin/creatingCookies?name=price&id=<%=product.id%>"><button type="submit"><i class="fa-solid fa-pen"></i></a>
                            </li>
                            <li>
                                <b>Rating : </b> <%= product.productRating%>/5 
                                <a href="/admin/creatingCookies?name=productRating&id=<%=product.id%>"><button type="submit"><i class="fa-solid fa-pen"></i></a>
                            </li>
                            <li>
                                <b>In Stock : </b><%=product.qtyAvailable%> Qty 
                                <a href="/admin/creatingCookies?name=qtyAvailable&id=<%=product.id%>"><button type="submit"><i class="fa-solid fa-pen"></i></a>
                            </li>
                            <li>
                                <b>Category : </b> <%=product.category%> 
                                <a href="/admin/creatingCookies?name=category&id=<%=product.id%>"><button type="submit"><i class="fa-solid fa-pen"></i></a>                           
                            </li>
                        </ul>
                    </div>
                    <%}%>    
                <%}%>

            </div>
        </div>
        <script src="https://kit.fontawesome.com/91b25f8033.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>
</html>
