<body>
  <!-- Signup page from bootstrap -->
    <section class="bg-image">
      <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10 col-md-9 col-lg-7 col-xl-6">
              <div class="card inner-div" style="border-radius: 15px;">
                <div class="card-body p-5">
                  <h2 class="text-uppercase text-center mb-4"> Welcome<br> to <br>Sakthi Stores</h2>
                  <!-- form tag which takes all the user logon information and stored into DB -->
                  <form action="/user/createUser" method="POST">
                    <div class="form-outline mb-4">
                      <input type="text" id="form3Example1cg" name="name"class="form-control border-black form-control-lg" />
                      <label class="form-label" for="form3Example1cg">Your Name</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="email" id="form3Example3cg" name="email" class="form-control border-black form-control-lg" />
                      <label class="form-label" for="form3Example3cg">Your Email</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="password" id="form3Example4cg" name="password" class="form-control border-black form-control-lg" />
                      <label class="form-label" for="form3Example4cg">Password</label>
                    </div>

                    <div class="form-outline mb-4">
                      <input type="password" id="form3Example4cdg" name="confirm_password" class="form-control border-black form-control-lg" />
                      <label class="form-label" for="form3Example4cdg">Repeat your password</label>
                    </div>

